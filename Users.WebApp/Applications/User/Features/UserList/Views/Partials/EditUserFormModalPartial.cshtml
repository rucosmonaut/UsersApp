@using Users.WebApp.Applications.User.Features.UserList
@model Users.WebApp.Applications.User.Features.UserList.Views.Partials.EditUserFormModalPartialViewModel

<div class="modal"
    data-backdrop="static"
    id="editUser-@Model.UserId"
    role="dialog"
    tabindex="-1">
    <div class="modal-dialog"
        role="document">
        <div class="modal-content">

            <div class="modal-header">
                <button aria-label="Close"
                    class="close"
                    data-bs-dismiss="modal"
                    type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">@Resources.EditUserFormModal_Header</h4>
            </div>

            <form method="post">

                <div class="modal-body">

                    @Html.AntiForgeryToken()

                    <div class="form-group">

                        <div class="mb-3">
                            <label for="UserEmail"
                                class="form-label">
                                @Resources.EditUserFormModal_UserEmailInput_Label
                            </label>
                            <input type="email"
                                class="form-control"
                                id="UserEmail"
                                aria-describedby="editUserEmailInput-@Model.UserId">
                            <span class="help-block">
                                @Resources.EditUserFormModal_UserEmailInput_HelpText
                            </span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default"
                        data-dismiss="modal"
                        id="cancelEditSenderFormButton-@Model.UserId"
                        tabindex="1"
                        type="button">
                        @Resources.EditUserFormModal_CancelButton_Label
                    </button>
                    <button class="btn btn-primary collapse"
                        formaction="@Model.EditUserActionUrl"
                        id="editUserEmailFormButton-@Model.UserId"
                        tabindex="2"
                        type="submit">
                        @Resources.EditUserFormModal_SubmitButton_Label
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>